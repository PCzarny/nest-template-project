{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^apps/(.*)$": "<rootDir>/../../$1",
    "^generated/(.*)$": "<rootDir>/../../../generated/$1"
  }
}
